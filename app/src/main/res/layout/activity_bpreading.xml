<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Bpreading">

        <!--Toolbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/llcaluhist"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="#0d141c"
            app:contentScrim="#0d141c">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtuh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:text="BP Reading"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/helveticabold"
                    />


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        <!--closedtoolbar-->



        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/llcaluhist">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Right"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Device 1"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <!--Initial Reading-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="left"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_margin="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView1"
                            android:text="SYS(mmhg):"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="17sp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/txtsysread1"
                            android:text="100"
                            android:layout_marginRight="20sp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/textView2"
                            android:text="DIA(mmhg): 100"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView1"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/textView3"
                            android:text="PULSE : 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView2"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_weight="0.5"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:text="SYS(mmhg): 100" />

                        <TextView
                            android:id="@+id/textView4"
                            android:text="DIA(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView5"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/textView6"
                            android:text="PULSE : 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_below="@+id/textView4"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>


                </android.support.v7.widget.CardView>


            </LinearLayout>
            <!--Final Reading-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
            android:layout_weight="2"
             >
             <TextView
                 android:id="@+id/coudwonTEXT"
                 android:layout_weight="1"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:text="Remaining  time"
                 android:gravity="center_horizontal"
                 android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/coudwondevice1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="50"
                android:textAppearance="?android:attr/textAppearanceMedium" />


         </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:weightSum="3">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Right"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Device 2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

                <!--Initial Reading-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:text="left"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="-8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_margin="8dp"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:text="SYS(mmhg): 100" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text1"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_marginTop="10dp"
                            android:text="DIA(mmhg): 100" />

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text2"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_marginTop="10dp"
                            android:text="PULSE : 100" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    app:cardCornerRadius="5dp"
                    app:cardPreventCornerOverlap = "false"
                    android:layout_weight="0.5"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="8dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text5"
                            android:text="SYS(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_marginTop="10dp"/>

                        <TextView
                            android:id="@+id/text4"
                            android:text="DIA(mmhg): 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_below="@+id/text5"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/text6"
                            android:text="PULSE : 100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helveticamedium"
                            android:textSize="17sp"
                            android:layout_below="@+id/text4"
                            android:layout_marginTop="10dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        >
        <TextView
            android:id="@+id/coudwonTEXT2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Remaining  time"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/coudwondevice2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="50"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        </LinearLayout>

        </LinearLayout>


</RelativeLayout>